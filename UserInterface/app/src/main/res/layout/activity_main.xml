<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <!-- EditText untuk Nama -->
    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raihan Firyal"
        android:layout_marginBottom="10dp"/>

    <!-- EditText untuk NPM -->
    <EditText
        android:id="@+id/etNPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2208107010084"
        android:layout_below="@id/etNama"
        android:layout_marginBottom="10dp"/>

    <!-- EditText untuk Jurusan -->
    <EditText
        android:id="@+id/etJurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informatika"
        android:layout_below="@id/etNPM"
        android:layout_marginBottom="20dp"/>

    <!-- Button Simpan -->
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_below="@id/etJurusan"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
