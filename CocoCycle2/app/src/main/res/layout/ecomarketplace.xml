<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F4A34">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/Rectangleheader" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Tulisan di sebelah kanan icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eco Marketplace"
                        android:textColor="#896956"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/backleft" />

                <ImageView
                    android:id="@+id/icon_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/keranjang" />

                <ImageView
                    android:id="@+id/icon_setting"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@id/icon_cart"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settings" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@id/icon_setting"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lonceng" />
            </RelativeLayout>

            <!-- Search Bar -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Cari produk daur ulang"
                android:background="@drawable/input"
                android:drawableStart="@drawable/search"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:textColor="#000000"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Kategori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kerajinan" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dalamkerajinan" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerajinan"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <!-- Gambar latar (arang) -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kerajinan" />

                        <!-- Gambar di dalamnya (misalnya ikon kecil di atas arang) -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/arang" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arang"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <!-- Gambar utama (plant) -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kerajinan" />

                        <!-- Gambar tambahan di dalam gambar plant -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/plant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanaman"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#D9D9D9"
                android:layout_marginBottom="12dp" />

            <!-- Produk Populer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk Populer"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="24dp">

                <!-- Contoh 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangleprodukpopuler"
                    android:padding="8dp">

                    <!-- Gambar produk utama -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/mangkuk" />

                    <!-- Informasi produk di atas background cream -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Gambar latar belakang cream -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/produkpopulercream"
                            android:adjustViewBounds="true" />

                        <!-- Informasi produk di atas background cream -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Gambar latar belakang cream -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/produkpopulercream"
                                android:adjustViewBounds="true" />

                            <!-- Konten informasi -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- Nama produk -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mangkuk Kelapa"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="17sp" />

                                <!-- Harga -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 50.000"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />

                                <!-- Bintang rating di pojok kanan bawah -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:orientation="horizontal"
                                    android:paddingTop="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="★ 4.5 (78)"
                                        android:textColor="#FFD700"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                    </FrameLayout>
                </LinearLayout>



                <!-- Contoh 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/rectangleprodukpopuler"
                    android:padding="8dp">

                    <!-- Gambar produk -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pottanaman" />

                    <!-- Informasi produk di atas background cream -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Latar belakang cream -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/produkpopulercream"
                            android:adjustViewBounds="true" />

                        <!-- Informasi teks produk -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pot Tanaman"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 35.000"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <!-- Rating di kanan bawah -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal"
                                android:paddingTop="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="★ 4.7 (110)"
                                    android:textColor="#FFD700"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>


                <!-- Tambah 2 produk lagi sesuai desain -->
                <!-- Tempat Lilin dan Arang -->
            </GridLayout>

            <!-- Tombol -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambahkan ke Keranjang"
                android:backgroundTint="#C5A78B"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/proicons_home"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/proicons_chat"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/keranjang"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ei_user"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>
