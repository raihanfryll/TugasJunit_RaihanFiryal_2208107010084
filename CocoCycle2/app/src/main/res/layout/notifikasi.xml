<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6F4A34">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backleft"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Notifikasi"
            android:textColor="#754C29"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Konten Notifikasi -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="20dp">
                <!-- Konten notifikasi lainnya -->
            </LinearLayout>


            <!-- Notifikasi 1: Match ditemukan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="33dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bulatconteng" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/conteng"
                            android:contentDescription="Check Icon" />
                    </FrameLayout>

                    <!-- Kolom untuk TextView -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Match ditemukan!"
                            android:textColor="#5D3A00"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Batok kelapa Anda telah dicocokkan"
                            android:textColor="#5D3A00"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="20dp"
                            android:text="Hari ini"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notifikasi 2: Pesan Baru -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="33dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bulatdolar"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dollar"
                            android:contentDescription="Dollar Icon" />
                    </FrameLayout>

                    <!-- Kolom untuk TextView -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Pesan Baru"
                            android:textColor="#5D3A00"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Pesan 5 Kg batok kelapa"
                            android:textColor="#5D3A00"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="20dp"
                            android:text="Kemarin"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:gravity="end"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Notifikasi 3: Promo Spesial -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="33dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bulatpersen"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/discount"
                            android:contentDescription="Promo Icon" />
                    </FrameLayout>

                    <!-- Kolom untuk TextView -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Promo Spesial"
                            android:textColor="#5D3A00"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Diskon 20% semua produk arang"
                            android:textColor="#5D3A00"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="20dp"
                            android:text="3 hari lalu"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:gravity="end"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Notifikasi 4: pengambilan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="33dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bulatcar"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/car"
                            android:contentDescription="Pickup Icon" />
                    </FrameLayout>

                    <!-- Kolom untuk TextView -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Pengambilan Dijadwalkan"
                            android:textColor="#5D3A00"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="201dp"
                            android:layout_height="20dp"
                            android:text="Besok 10:00 - 12:00"
                            android:textColor="#5D3A00"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="20dp"
                            android:text="1 minggu lalu"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:gravity="end"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/proicons_home"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/proicons_chat"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/keranjang"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ei_user"
            android:scaleType="centerInside" />
    </LinearLayout>
</LinearLayout>
