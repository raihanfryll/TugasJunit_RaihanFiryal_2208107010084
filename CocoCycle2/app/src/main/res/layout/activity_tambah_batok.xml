<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F4A34"
    android:paddingTop="20dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan gambar latar dan ikon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/Rectangleheader" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Batok Kelapa"
                android:textColor="#896956"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/backleft"
                android:contentDescription="Kembali" />

            <ImageView
                android:id="@+id/icon_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/keranjang" />

            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/icon_cart"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/settings" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/icon_setting"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/lonceng" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Batok Kelapa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Upload Foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/bingkai"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/camera"
                android:background="@drawable/Ellipse"
                android:padding="16dp"
                android:contentDescription="Upload Foto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggah foto batok kelapa Anda"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Detail Batok -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Batok"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Berat -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah/Berat"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/input"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000"
                android:hint="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tambah"
                    android:src="@drawable/ic_arrow_up" />

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down"
                    android:background="@android:color/transparent"
                    android:contentDescription="Kurangi" />
            </LinearLayout>

            <Button
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:text="KG"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kondisi Batok"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/kondisi"
                android:layout_marginEnd="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="75dp"
                    android:src="@drawable/clean" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bersih"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/kondisi"
                android:layout_marginEnd="5dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="75dp"
                    android:src="@drawable/kotor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kotor"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/kondisi"
                android:padding="8dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="75dp"
                    android:src="@drawable/diproses" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diproses"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Penambahan"
            android:backgroundTint="#C5A78B"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
